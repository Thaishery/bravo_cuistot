{% extends 'base.html.twig' %}

{% block title %}Ingredients index{% endblock %}

{% block body %}
    <h1>Ingredients index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ingredient in ingredients %}
            <tr>
                <td>{{ ingredient.id }}</td>
                <td>{{ ingredient.name }}</td>
                <td>
                    <a href="{{ path('user_ingredient_show', {'id': ingredient.id}) }}">show</a>
                    <a href="{{ path('user_ingredient_edit', {'id': ingredient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Vous n'avez pas encore ajouter d'ingédients! </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_ingredient_new') }}">Créer un ingredient</a>
{% endblock %}
