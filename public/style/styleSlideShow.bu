 /* ? Feuille de style du SlideShow  */
     
     .labelSlideShow {
     	background: #444;
     	color: #fff;
     	transition: transform 400ms ease-out;
     	display: inline-block;
       min-height: 100%;
     	width: 100vw;
     	height: 100vh;
     	position: relative;
     	z-index: 1;
     	text-align: center;
     	line-height: 100vh;
     }
     
     #formSlideShow {
     	position: absolute;
     	top: 0;
     	left: 0;
     	bottom: 0;
     	right: 0;
     	white-space: nowrap;
     }
     
     .inputSlideShow  {
     	position: absolute;
     }
     
     .flechesDirectionnelles {
     	position: fixed;
     	z-index: 10;
     	bottom: 0;
     	left: 0;
     	right: 0;
     	padding: 1rem;
     	color: #fff;
     	text-align: center;
     	transition: all 300ms linear;
     	opacity: 0;
     }
     
     .inputSlideShow:focus ~ .flechesDirectionnelles {
     	opacity: 0.8;
     }
     
     .inputSlideShow:nth-of-type(1):checked ~ .labelSlideShow:nth-of-type(1), 
     .inputSlideShow:nth-of-type(2):checked ~ .labelSlideShow:nth-of-type(2),
     .inputSlideShow:nth-of-type(3):checked ~ .labelSlideShow:nth-of-type(3),
     .inputSlideShow:nth-of-type(4):checked ~ .labelSlideShow:nth-of-type(4){
        z-index: 0;
     }
     
     .inputSlideShow:nth-of-type(1):checked ~ .labelSlideShow {
     	transform: translate3d(0, 0, 0);
     }
     
     .inputSlideShow:nth-of-type(2):checked ~ .labelSlideShow {
     	transform: translate3d(-100%, 0, 0);
     }
     
     .inputSlideShow:nth-of-type(3):checked ~ .labelSlideShow {
     	transform: translate3d(-200%, 0, 0);
     }
     
     .inputSlideShow:nth-of-type(4):checked ~ .labelSlideShow {
     	transform: translate3d(-300%, 0, 0);
     }
     
     .labelSlideShow {
     	background: #444;
     	background-size: cover;
     	font-size: 3rem;
     }
     
     .labelSlideShow[for="Etape2"],
     .labelSlideShow[for="Etape4"] {
     	background: #cc0000;
     }
     
     .labelSlideShow:before,
     .labelSlideShow:after {
     	color: white;
     	display: block;
     	background: rgba(255,255,255,0.2);
     	position: absolute;
     	padding: 1rem;
     	font-size: 3rem;
     	height: 10rem;
     	vertical-align: middle;
     	line-height: 10rem;
     	top: 50%;
     	transform: translate3d(0, -50%, 0);
     	cursor: pointer;
     }
     
     .labelSlideShow:before {
     	content: "\276D";
     	right: 100%;
     	border-top-left-radius: 50%;
     	border-bottom-left-radius: 50%;
     }
     
     .labelSlideShow:after {
     	content: "\276C";
     	left: 100%;
     	border-top-right-radius: 50%;
     	border-bottom-right-radius: 50%;
     }
     